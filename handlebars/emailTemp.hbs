<!DOCTYPE html>
<html>

<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 14px;
        }
        #contact {
            border: 1px solid white;
        }
        .address {
            border-bottom: 1px solid white;
        }
        .year {
            border-bottom: 1px solid white;
        }
        .add {
            border-bottom: 1px solid white;
        }
    </style>
</head>

<body>
    <div>
        <p><strong>From: </strong>{{firstGuardianName}} {{firstGuardianLastName}}</p>
        <p>{{guardianRelation}}</p>
        <p>{{guardianGender}}</p>
        <p>{{guardianPhone}}</p>
        <p>{{guardianEmail}}</p>
        <p>{{guardianEmplr}}</p>
    </div>

    <div id="student">
        <p><strong>Student Info:</strong></p>
        <p>{{studentName}}</p> <p>{{studentLastName}}</p>
        <p>{{studentGender}}</p>
        <p>{{studentDOB}}</p>
        <p>{{allergies}}</p>
        <p>{{illnesses}}</p>
        <p>{{medications}}</p>
        <p>{{interests}}</p>
    </div>

    <div id="emergency-contact">
        <p><strong>Emergency Contact Info:</strong></p>
        <p>{{emergencyName}}</p>
        <p>{{emergencyLastName}}</p>
        <p>{{emergencyPhone}}</p>
        <p>{{emergencyEmail}}</p>
    </div>

    <div id="opt">
        <p><strong>Do they live on the island</strong></p>
        <p>{{optYes}}</p>
        <p>{{optNo}}</p>
    </div>

    <div class="unwelcome">
        <p><strong>Unwelcome</strong></p> <p>{{unwelcomeName1}}</p>
        <p>{{unwelcomeLastName1}}</p>
        <p>{{unwelcomeName2}}</p>
        <p>{{unwelcomeLastName2}}</p>
        <p>{{unwelcomeName3}}</p>
        <p>{{unwelcomeLastName3}}</p>
    </div>

    <div class="second-guardian">
        <p><strong>Second Guardian: </strong>{{secondGuardianName}} {{secondGuardianLastName}}</p>
        <p>{{guardianRelation2}}</p>
        <p>{{secondGuardianGender}}</p>
        <p>{{secondGuardianPhone}}</p>
        <p>{{secondGuardianEmail}}</p>
    </div>

    <div class="address">
        <p>{{address}}</p>
        <p>{{city}}</p>
        <p>{{state}}</p>
        <p>{{zip}}</p>
        <p>{{hphone}}</p>
    </div>
</body>

</html>
